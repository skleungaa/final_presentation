
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:id="@+id/kpiRelativeLayout"
                    tools:context="com.example.final_presentation.app.KPI">

        <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/kpiView"-->
                <!--android:textColor="#ff000000"/>-->

        <ImageView
                android:layout_width="450dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/kpiImage"
                android:src="@drawable/rsz_kpi"/>

        <com.example.final_presentation.app.TouchImageView
                android:layout_width="450dp"
                android:layout_height="270dp"
                android:layout_below="@+id/kpiImage"
                android:layout_marginTop="20dp"
                android:id="@+id/yammerImage"
                android:layout_centerHorizontal="true"
                android:src="@drawable/yammer_image"/>


    </RelativeLayout>
</ScrollView>
